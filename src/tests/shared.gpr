abstract project Shared is
   for Source_Dirs use ();

   package Compiler is
      for Default_Switches ("Ada") use ("-fstack-check",
                                        "-gnata",
                                        "-gnatf",
                                        "-gnato",
                                        "-gnatwa",
                                        "-gnaty3abcdefhiklmnoprstux",
                                        "-Wall",
                                        "-O2",
                                        "-gnat2012");
   end Compiler;

   type Databases is ("PostgreSQL", "SQLite");
   Database : Databases := External ("DATABASE", "SQLite");

   package Naming is
      case Database is
         when "PostgreSQL" =>
            for Specification ("Storage.Connection") use
              "__storage-connection_postgresql.ads";
            for Specification ("SQL_Prepared_Statements.Attribute") use
              "__sql_prepared_statements-attribute_postgresql.ads";
            for Specification ("SQL_Prepared_Statements.Configuration") use
              "__sql_prepared_statements-configuration_postgresql.ads";
            for Specification ("SQL_Prepared_Statements.Contact") use
              "__sql_prepared_statements-contact_postgresql.ads";
            for Specification ("SQL_Prepared_Statements.Organization") use
              "__sql_prepared_statements-organization_postgresql.ads";
         when "SQLite" =>
            for Specification ("Storage.Connection") use
              "__storage-connection_sqlite.ads";
            for Specification ("SQL_Prepared_Statements.Attribute") use
              "__sql_prepared_statements-attribute_sqlite.ads";
            for Specification ("SQL_Prepared_Statements.Configuration") use
              "__sql_prepared_statements-configuration_sqlite.ads";
            for Specification ("SQL_Prepared_Statements.Contact") use
              "__sql_prepared_statements-contact_sqlite.ads";
            for Specification ("SQL_Prepared_Statements.Organization") use
              "__sql_prepared_statements-organization_sqlite.ads";
      end case;
   end Naming;

   package IDE is
      for Compiler_Command ("ada") use "gnatmake";
   end IDE;
end Shared;
